{
  "name": "veggies",
  "version": "0.1.0",
  "description": "Veggies is an awesome cucumberjs boilerplate for API/CLI testing. Great for testing APIs built upon Express, Koa, HAPI, Loopback and others. It's also the perfect companion for testing CLI applications built with commander, meow & Co.",
  "tags": [
    "bdd",
    "cucumber",
    "gherkin",
    "testing",
    "api",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ekino/veggies.git"
  },
  "main": "src/index.js",
  "author": "plouc <https://github.com/plouc>",
  "maintainers": [
    {
      "name": "RaphaÃ«l Benitte"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "chai": "^4.0.2",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "cucumber": "^2.3.1",
    "eslint": "^4.1.1",
    "gh-pages": "^1.0.0",
    "jest": "^20.0.4",
    "jsdoc": "^3.4.3",
    "minami": "^1.2.3",
    "prettier": "^1.5.2"
  },
  "peerDependencies": {
    "cucumber": "^2.3.1"
  },
  "scripts": {
    "test": "jest",
    "test-cover": "jest --coverage",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "fmt": "prettier --print-width 140 --tab-width=4 --single-quote --bracket-spacing --no-semi --color --write \"src/**/*.js\"",
    "check-fmt": "prettier --print-width 140 --tab-width=4 --single-quote --bracket-spacing --no-semi --list-different \"src/**/*.js\"",
    "version": "echo ${npm_package_version}",
    "lint": "eslint .",
    "doc": "jsdoc src -R README.md -r -d doc --verbose -t node_modules/minami",
    "doc-pub": "yarn run doc && gh-pages -d doc",
    "examples": "cucumberjs --require examples/support examples/features"
  }
}
